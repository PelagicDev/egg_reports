<h1>Weekly Totals:</h1>
<h3>Hatch Eggs: <%= @weekly_hatch %></h3>
<h3>Cull Eggs: <%= @weekly_cull %></h3>

<h1>Listing daily_reports</h1>

<table>
  <thead>
    <tr>
      <th>Hatch</th>
      <th>Cull</th>
      <th>Hen deaths</th>
      <th>Male deaths</th>
      <th>Hen feed</th>
      <th>Male feed</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_reports.each do |daily_report| %>
      <tr>
        <td><%= daily_report.hatch_eggs %></td>
        <td><%= daily_report.cull_eggs %></td>
        <td><%= daily_report.hen_deaths %></td>
        <td><%= daily_report.male_deaths %></td>
        <td><%= daily_report.hen_feed %></td>
        <td><%= daily_report.male_feed %></td>
        <td><%= daily_report.house_id %></td>
        <td><%= link_to 'Show', [@house, daily_report] %></td>
        <td><%= link_to 'Edit', edit_house_daily_report_path(@house, daily_report) %></td>
        <td><%= link_to 'Delete', [@house, daily_report], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily report', new_house_daily_report_path(@house), class: 'btn btn-primary btn-lg' %>
