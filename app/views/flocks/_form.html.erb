<%= simple_form_for([@house, @flock]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hens %>
    <%= f.input :males %>
    <%= f.input :hen_feed %>
    <%= f.input :male_feed %>
    <%= f.input :water_meter %>
    <%= f.input :open_date %>
    <%= f.input :close_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
