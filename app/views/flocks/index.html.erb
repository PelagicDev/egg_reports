<h1>Listing flocks</h1>

<table>
  <thead>
    <tr>
      <th>Hens</th>
      <th>Males</th>
      <th>Hen feed</th>
      <th>Male feed</th>
      <th>Water meter</th>
      <th>Open date</th>
      <th>Close date</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flocks.each do |flock| %>
      <tr>
        <td><%= flock.hens %></td>
        <td><%= flock.males %></td>
        <td><%= flock.hen_feed %></td>
        <td><%= flock.male_feed %></td>
        <td><%= flock.water_meter %></td>
        <td><%= flock.open_date %></td>
        <td><%= flock.close_date %></td>
        <td><%= flock.house_id %></td>
        <td><%= link_to 'Show', [@house, flock] %></td>
        <td><%= link_to 'Edit', edit_house_flock_path(@house, flock) %></td>
        <td><%= link_to 'Delete', [@house, flock], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flock', new_house_flock_path(@house), class: 'btn btn-primary btn-lg' %>
